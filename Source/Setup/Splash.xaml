<Window x:Class="Magic.Setup.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash"
		Height="800"
		Width="500"
		WindowStyle="None">
	<Border 
		Background="#171717"
		BorderBrush="#313131"
		BorderThickness="1">

        <DockPanel>
			<Button 
				Click="CloseApplication"
				DockPanel.Dock="Top"
				HorizontalAlignment="Right"
				FontSize="30"
				FontFamily="Arial"
				FontWeight="DemiBold"
				Foreground="White"
				Background="Transparent"
				Padding="10,10,10,10">
				x
			</Button>
			
			<Grid>
				<Button 
					Content="Install" 
					VerticalAlignment="Center"
					Click="ExecuteInstall"
					HorizontalAlignment="Center" />
			</Grid>
		
		</DockPanel>
    </Border>
</Window>
